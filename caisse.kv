<Fenetre_Principale>:

    # Fenetre complete
    BoxLayout:
        orientation: 'vertical'
        
        # Ligne 1
        BoxLayout:
            orientation: 'horizontal'
            # Affiche resume
            Label:
                id: resume
                text: "*Resume"
            Label:
                id: calculette
                text: "*Calculette"
            BoxLayout:
                orientation: 'vertical'
                GridLayout:

                    cols: 2
                    id: liste_moyen_paiements
                    text: "*Paiements"
    
        # Ligne 2
        BoxLayout:
            orientation: 'horizontal'
            GridLayout:
                cols: 7
                
                id: liste_categories
                
        # Ligne 3
        BoxLayout:
            orientation: 'horizontal'
            GridLayout:
                cols: 7
                id: liste_produits
        
        # Ligne 4
        BoxLayout:
            orientation: 'horizontal'
            id: liste_actions
            Label:
                text: "*Liste actions"
            Button:
                background_color: 'yellow'
                id: btn_option
                text: "Options"
                on_press: app.root.current = 'Fenetre_Options'

                    
        
<Fenetre_Options>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            background_color: 'red'
            text: "Quitter l'application"
            on_press: app.stop()

        Button:
            background_color: 'yellow'
            text: "Categories"
            on_press: app.root.current = 'Fenetre_Categories'

        Button:
            background_color: 'yellow'
            text: "Produits"
            on_press: app.root.current = 'Fenetre_Produit'

        Button:
            background_color: 'yellow'
            text: "Paiements"
            on_press: app.root.current = 'Fenetre_Paiements'

        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Principale'

        
<Fenetre_Categories>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Categories"

        TextInput:
            id: label_ajout_categorie
            multiline: False
            hint_text:'Entrer produit'
            
        Button:
            id: btn_ajouter_categorie
            text: "Ajouter"
            on_press: root.ajouter_categorie()


        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Options'

<Fenetre_Paiements>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Paiements"

        TextInput:
            id: label_ajout_paiement
            multiline: False
            hint_text:'Entrer paiement'
            
        Button:
            id: btn_ajouter_paiement
            text: "Ajouter"
            on_press: root.ajouter_paiement()


        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Options'

<Fenetre_Produit>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Produit"

        BoxLayout:
            orientation: 'horizontal'
            id: liste_categorie_produit
            multiline: False
            hint_text:'Cat√©gorie produit'
        
        TextInput:
            id: label_nom_produit
            multiline: False
            hint_text:'Nom produit'
        
        TextInput:
            id: label_prix_produit
            multiline: False
            hint_text:'Prix produit'

        Button:
            id: btn_ajouter_produit
            text: "Ajouter"
            on_press: root.ajouter_produit()


        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Options'
