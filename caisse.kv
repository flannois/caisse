<Fenetre_Principale>:

    # Fenetre complete
    BoxLayout:
        orientation: 'vertical'
        
        # Ligne 1
        BoxLayout:
            orientation: 'horizontal'
            # Affiche resume
            Label:
                id: resume
                text: "*Resume"
            Label:
                id: calculette
                text: "*Calculette"
            BoxLayout:
                orientation: 'vertical'
                id: liste_type_paiements
                text: "*Paiements"
    
        # Ligne 2
        GridLayout:
            cols: 5
            
            id: liste_categories
            
        # Ligne 3
        BoxLayout:
            orientation: 'horizontal'
            id: liste_produits
        
        # Ligne 4
        BoxLayout:
            orientation: 'horizontal'
            id: liste_actions
            Label:
                text: "*Liste actions"
            Button:
                background_color: 'yellow'
                id: btn_config
                text: "Config"
                on_press: app.root.current = 'Fenetre_Configuration'

                    
        
<Fenetre_Configuration>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            background_color: 'yellow'
            text: "Categories"
            on_press: app.root.current = 'Fenetre_Categories'

        Button:
            background_color: 'yellow'
            text: "Paiements"
            on_press: app.root.current = 'Fenetre_Paiements'

        

        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Principale'

        
<Fenetre_Categories>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Categories"

        TextInput:
            id: label_ajout_categorie
            multiline: False
            hint_text:'Entrer produit'
            
        Button:
            id: btn_ajouter_categorie
            text: "Ajouter"
            on_press: root.ajouter_categorie()


        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Configuration'

<Fenetre_Paiements>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Paiements"

        TextInput:
            id: label_ajout_paiement
            multiline: False
            hint_text:'Entrer paiement'
            
        Button:
            id: btn_ajouter_categorie
            text: "Ajouter"
            on_press: root.ajouter_paiement()


        Button:
            text: "Retour"
            on_press: app.root.current = 'Fenetre_Configuration'

 